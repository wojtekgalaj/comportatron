// Errors
.errors .alert
	position fixed
	padding 1rem .8rem
	background red
	color white
	font-size .9rem
	margin .5rem 0
	width 80%
	button
		display none // Or i need to wire it up, doesnt do anything without bootstrap

input
	font-size .9rem
	padding .5rem

// Buttons
#login-buttons
	float right

#login-dropdown-list
	left -140px

button, .button
	simple-button()

button[type=submit]
	margin 1rem auto
	clear both
	display block
	width 20rem
	text-align center


.bigLink
	simple-button()
	padding 2.5rem
	font-size 2rem
	width 33%
	margin-top .5rem

.kidLinks
	margin-bottom 2rem

.control
	margin 1rem 0
	button
		margin auto
		display block

header
	padding 1rem 0
	background #333
	color white
	padding-bottom 1rem
	margin-bottom 1rem
	border-bottom 5px solid white
	a
		margin 0 2rem 0 0
		color #aaa
		&:hover
			color white

#login-dropdown-list a:hover
	color black


footer
	padding 1rem 0


